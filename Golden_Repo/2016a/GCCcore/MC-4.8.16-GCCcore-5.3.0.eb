easyblock = 'ConfigureMake'

name = 'MC'
version = '4.8.16'

homepage = 'https://www.midnight-commander.org/'
description = """Midnight Commander: User-friendly file manager and visual shell"""

toolchain = {'name': 'GCCcore', 'version': '5.3.0'}

sources = ['%(version)s.tar.gz']
source_urls = ['https://github.com/MidnightCommander/mc/archive/']

dependencies = [
    ('GLib', '2.47.5'),
    ('S-Lang', '2.3.0'),
    ('libX11', '1.6.3'),
]

builddependencies = [
    ('binutils', '2.26'),
    ('pkg-config', '0.29'),
    ('Automake', '1.15'),
    ('libtool', '2.4.6'),
    ('xorg-macros', '1.19.0'),
    ('xproto', '7.0.28'),
    ('kbproto', '1.0.7'),
]

preconfigopts = './autogen.sh && '

sanity_check_paths = {
    'files': ['bin/mc'],
    'dirs': []
}

moduleclass = 'tools'
