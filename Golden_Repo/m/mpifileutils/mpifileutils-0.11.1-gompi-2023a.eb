# This file is part of JSC's public easybuild repository (https://github.com/easybuilders/jsc)
easyblock = 'CMakeMake'

name = 'mpifileutils'
version = "0.11.1"

homepage = 'https://hpc.github.io/mpifileutils/'

description = """
 MPI-Based File Utilities For Distributed Systems
"""

toolchain = {'name': 'gompi', 'version': '2023a'}

github_account = 'hpc'
source_urls = [GITHUB_SOURCE]
sources = ['v%(version)s.tar.gz']
checksums = ['e2cba53309b5b3ee581b6ff82e4e66f54628370cce694c34224ed947fece32d4']

builddependencies = [
    ('CMake', '3.26.3'),
]

dependencies = [
    ('attr', '2.5.1'),
    ('bzip2', '1.0.8'),
    ('lwgrp', '1.0.5'),
    ('dtcmp', '1.1.4'),
    ('libarchive', '3.6.2'),
    ('libcircle', '0.3'),
    ('HDF5', '1.14.2'),
]

configopts = "-DENABLE_GPFS=ON "
configopts += "-DENABLE_HDF5=ON "

sanity_check_paths = {
    'files': ['bin/dsync', 'include/mfu.h', 'lib/libmfu.%s' % SHLIB_EXT],
    'dirs': []
}

moduleclass = 'tools'
